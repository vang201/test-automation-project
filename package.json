{
  "name": "playwright-typescript-portfolio",
  "version": "0.1.0",
  "private": true,
  "description": "Playwright + TypeScript example test automation repo for portfolio",
  "scripts": {
    "clean": "rimraf test-results && rimraf .playwright && rimraf coverage",
    "install:playwright": "npx playwright install --with-deps",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "coverage": "npx nyc --reporter=html npm run test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.0"
  }
}
